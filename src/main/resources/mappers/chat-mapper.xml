<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Chat">
	<insert id="insert">
		insert into chat_list values (chat_list_seq.nextval,${mentor},${mentee},default)
	</insert>
	
	<update id="update">
		update chat_list set yn = 'Y' where seq = ${seq}
	</update>
	
	<delete id="delete">
		delete from chat_list where seq = ${seq}
	</delete>
	
	<select id="select" resultType="kh.final_project.dto.ChatlistDTO">
		select * from chat_list where mentor = #{loginID} or mentee = #{loginID}
	</select>
	
</mapper>